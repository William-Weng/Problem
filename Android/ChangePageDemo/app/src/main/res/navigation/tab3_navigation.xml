<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab3_navigation"
    app:startDestination="@id/rootNavigationFragment">

    <fragment
        android:id="@+id/rootNavigationFragment"
        android:name="idv.william.changepagedemo.navigationFragment.RootNavigationFragment"
        android:label="RootNavigationFragment" >
        <action
            android:id="@+id/action_rootNavigationFragment_to_nextNavigationFragment"
            app:destination="@id/nextNavigationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nextNavigationFragment"
        android:name="idv.william.changepagedemo.navigationFragment.NextNavigationFragment"
        android:label="fragment_next_navigation"
        tools:layout="@layout/fragment_next_navigation" >
        <action
            android:id="@+id/action_nextNavigationFragment_to_rootNavigationFragment"
            app:destination="@id/rootNavigationFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>